<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="2dp"
    android:background="@color/white">

        <ImageView
            android:id="@+id/menu_toolbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight=".1"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_baseline_menu_open_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_weight=".7"
            android:gravity="center_vertical"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_noun_convex_5845592" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".7"
                    android:gravity="center| left"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight=".1"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_refresh_24" />

        <ImageView
            android:id="@+id/img_connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight=".1"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_disconnected" />

</LinearLayout>

